def corazon():
  h=input("Dime como de grande quieres el corazon: ")
  espacio=" "
  asterisco="*"
  a=h/3
  b=h/2
  print espacio*a+asterisco*b+espacio*b+asterisco*b
  h=h-1
  for i in range(h,1,-1):
    for ne in range(1,h+1-i):
      espacio=espacio+" "
    for na in range(1,2*i-1):
      asterisco=asterisco+"*"
    print espacio+asterisco
    espacio=" "
    asterisco="*"
corazon()
