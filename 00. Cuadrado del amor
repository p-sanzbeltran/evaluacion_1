def cuadrado_del_amor():
  h=7
  espacio=" "
  asterisco="*"
  for i in range(1,h/2+1):
    for ne1 in range(1,h-2*i):
      espacio=espacio+" "
    for na1 in range(1,i):
      asterisco=asterisco+"*"
    print asterisco+espacio+asterisco
    espacio=" "
    asterisco="*"
  print asterisco*h
  espacio=" "
  asterisco="*"
  for u in range(1,h/2+1):
    for ne2 in range(1,u*2-1):
      espacio=espacio+" "
    for na2 in range(1,h/2+1-u):
      asterisco=asterisco+"*" 
    print asterisco+espacio+asterisco
    espacio=" "
    asterisco="*"
cuadrado_del_amor()
